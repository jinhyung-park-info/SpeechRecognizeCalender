<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import
            type="com.naver.hackday.android.speechrecognizecalender.src.ui.login.MainConverter" />

        <variable
            name="viewModel"
            type="com.naver.hackday.android.speechrecognizecalender.src.ui.event.viewModels.EventViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id ="@+id/activity_event_add_tv_startdatetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="start date"
        android:text="@={viewModel.updateStartDate}"/>

    <EditText
        android:id ="@+id/activity_event_add_tv_enddatetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="end date"
        android:text="@={viewModel.updateEndDate}"/>

    <Button
        android:it="@+id/activity_event_add_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장하기"
        android:layout_gravity="center"
        android:enabled="@{MainConverter.signInBtnValidate(viewModel.startDate, viewModel.endDate)}"
        android:onClick="@{() -> viewModel.eventCreateBtnClicked()}"/>
    </LinearLayout>
</layout>