<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.naver.hackday.android.speechrecognizecalender.src.ui.login.MainConverter" />

        <variable
            name="viewModel"
            type="com.naver.hackday.android.speechrecognizecalender.src.ui.login.viewModels.LogInViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".src.ui.login.MainActivity">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="id"
            android:text="@={viewModel.id}" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="password"
            android:text="@={viewModel.password}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:enabled="@{MainConverter.signInBtnValidate(viewModel.id, viewModel.password)}"
            android:onClick="@{() -> viewModel.signInBtnClicked()}"
            android:padding="10dp"
            android:text="Login" />

        <Button
            android:id="@+id/activity_main_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="Next" />
    </LinearLayout>

</layout>
